<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.IndexServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>NewGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.NewGameServlet</servlet-class>
  </servlet>

  
    <servlet>
    <servlet-name>GameHistoryServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.GameHistoryServlet</servlet-class>
  </servlet>
  
      <servlet>
    <servlet-name>LoginPageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.LoginPageServlet</servlet-class>
  </servlet>
    
      <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.SignUpServlet</servlet-class>
  </servlet>
      
      <servlet>
    <servlet-name>AccountRecoveryServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.AccountRecoveryServlet</servlet-class>
  </servlet>
 
        <servlet>
    <servlet-name>LogoutPageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ChessProject.servlet.LogoutPageServlet</servlet-class>
  </servlet>
    
         

  

  
  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>NewGameServlet</servlet-name>
    <url-pattern>/newGame</url-pattern>
  </servlet-mapping>

  
    <servlet-mapping>
    <servlet-name>GameHistoryServlet</servlet-name>
    <url-pattern>/gameHistory</url-pattern>
  </servlet-mapping>
    
    <servlet-mapping>
    <servlet-name>LoginPageServlet</servlet-name>
    <url-pattern>/loginPage</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signupPage</url-pattern>
  </servlet-mapping>

    <servlet-mapping>
    <servlet-name>AccountRecoveryServlet</servlet-name>
    <url-pattern>/accountRecovery</url-pattern>
  </servlet-mapping>
  
     <servlet-mapping>
    <servlet-name>LogoutPageServlet</servlet-name>
    <url-pattern>/logoutPage</url-pattern>
  </servlet-mapping>
       
 
 
 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
